{
	"env": {
			"browser": true,
			"es6": true,
			"mocha": true
	},
	"extends": [
			"plugin:vue/essential",
			"airbnb-base"
	],
	"globals": {
			"Atomics": "readonly",
			"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
			"ecmaVersion": 2018,
			"sourceType": "module"
	},
	"plugins": [
			"vue"
	],
	"rules": {
			"max-len": [
					"error",
					{
							"code": 120
					}
			],
			"linebreak-style": [
				"error",
				"windows"
			],
			"no-unused-expressions": "off"
	}
}